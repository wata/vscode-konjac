{
  "name": "konjac",
  "displayName": "Konjac - Translate Text",
  "description": "VSCode extension for Google Translate",
  "version": "0.2.5",
  "publisher": "wata",
  "galleryBanner": {
    "color": "#439FE2",
    "theme": "light"
  },
  "homepage": "https://marketplace.visualstudio.com/items?itemName=wata.konjac",
  "repository": {
    "type": "git",
    "url": "https://github.com/wata/vscode-konjac.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wata/vscode-konjac/issues"
  },
  "engines": {
    "vscode": "^1.21.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "icon": "icon.png",
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Konjac configuration",
      "properties": {
        "konjac.apiUrl": {
          "type": "string",
          "default": "",
          "description": "Type your konjac-api URL."
        },
        "konjac.target": {
          "type": "string",
          "default": "en",
          "description": "Type your target language."
        }
      }
    },
    "commands": [
      {
        "command": "konjac.configure",
        "title": "Select Target Language",
        "category": "Konjac"
      },
      {
        "command": "konjac.translate",
        "title": "Translate This",
        "category": "Konjac"
      },
      {
        "command": "konjac.replace",
        "title": "Translate This and Replace",
        "category": "Konjac"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "konjac.translate"
        },
        {
          "when": "editorHasSelection",
          "command": "konjac.replace"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.5.1",
    "vscode": "^1.1.34",
    "tslint": "^5.17.0",
    "@types/node": "^12.0.7",
    "@types/mocha": "^5.2.7"
  },
  "dependencies": {
    "encodeurl": "^1.0.2",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7"
  }
}
